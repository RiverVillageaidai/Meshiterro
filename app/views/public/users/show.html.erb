<!--Users#show-->
<!--ユーザー詳細-->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <!--現在ログインしているユーザ だったら-->
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

</div>

<!--ユーザー投稿一覧-->
<!--<render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] -->
<%= render 'public/post_images/list', post_images: @post_images %>